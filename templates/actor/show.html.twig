{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Fiche de {{ actor.firstname ~ ' '  ~ actor.lastname}} </h1>

    <img style="max-width: 500px" src="{{ vich_uploader_asset(actor) }}" alt="{{ actor.firstname }}">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ actor.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ actor.lastname }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ actor.birthDate ? actor.birthDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_actor_index') }}">back to list</a>

    <a href="{{ path('app_actor_edit', {'id': actor.id}) }}">edit</a>

    {{ include('actor/_delete_form.html.twig') }}
{% endblock %}
