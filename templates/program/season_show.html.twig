{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}
{% endblock %}

{% block body %}

	<div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1>{{program.title}} - Saison {{season.number}}</h1>
            <p>{{ season.description }}</p>
            <p>Nombre d'épisodes : {{ season.episodes|length }}</p>
	    </div>	
	</div>

    <div class="container-fluid">
        <div class="row justify-content-center program">
            {% for episode in season.episodes|sort((a, b) => a.number <=> b.number) %}
                <div class="card col-11 col-sm-5 col-lg-3 col-xxl-2 p-0 m-2">
					<div class="card-body">
						<h3 class="card-title">Episode N°{{episode.number}}</h3>
						<p class="card-text">{{episode.synopsis}}</p>
						<a href="{{ path("program_episode_show", { program: program.id, season: season.id, episode: episode.id }) }}" class="btn btn-primary m-t-auto">Aller à la page détaillée de l'épisode</a>
					</div>
				</div>
    

            {% endfor %}
        </div>
    </div>

    <a href="{{ path('program_show', { slug: program.slug} ) }}">
        Retour à la page détaillée de la série
    </a>

    <br>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>



		


{% endblock %}
