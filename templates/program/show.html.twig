{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}
{% endblock %}

{% block body %}

	<div class="media">
		<p>{{program.seasons|length}}</p>
		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>Catégorie :
				{{ program.category.name }}</p>
		</div>

		{% for season in program.seasons|sort((a, b) => a.number <=> b.number) %}
			<p>{{season.number}}</p>
			<p>{{season.year}}</p>
			<p>{{season.description}}</p>
            <a href="{{ path("program_season_show", { programId: program.id, seasonId: season.id }) }}">
			    Aller à la page détaillée de la saison
		    </a>

		{% endfor %}

		<a href="{{ path('program_index') }}">
			Retour à la liste des programmes
		</a>
	</div>


{% endblock %}
